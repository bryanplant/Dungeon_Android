<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#120675"
    tools:context="com.bryanplant.dungeon.TitleActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/titlescreen" />

    <Button
        android:id="@+id/PlayButton"
        android:layout_width="120dp"
        android:layout_height="35dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="79dp"
        android:background="@android:color/transparent"
        android:visibility="visible" />

    <Button
        android:id="@+id/OptionsButton"
        android:layout_width="120dp"
        android:layout_height="35dp"
        android:layout_alignStart="@+id/PlayButton"
        android:layout_below="@+id/PlayButton"
        android:layout_marginTop="16dp"
        android:background="@android:color/transparent"
        android:visibility="visible" />

    <Button
        android:id="@+id/QuitButton"
        android:layout_width="120dp"
        android:layout_height="35dp"
        android:layout_alignStart="@+id/OptionsButton"
        android:layout_below="@+id/OptionsButton"
        android:layout_marginTop="13dp"
        android:background="@android:color/transparent"
        android:visibility="visible" />

</RelativeLayout>
