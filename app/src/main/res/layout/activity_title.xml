<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#120675"
    tools:context="com.bryanplant.dungeon.TitleActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/titlescreen"
        android:scaleType="fitXY"
        android:id="@+id/imageView"
        android:contentDescription="Background Image" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="43dp"
        android:background="@android:color/black"
        android:text="Dungeon Dissonance"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="30sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/PlayButton"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="120dp"
        android:layout_height="35dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="117dp"
        android:background="@android:color/black"
        android:elevation="0dp"
        android:fontFamily="sans-serif"
        android:text="Play"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        android:visibility="visible" />

    <Button
        android:id="@+id/OptionsButton"
        android:layout_width="120dp"
        android:layout_height="35dp"
        android:layout_alignStart="@+id/PlayButton"
        android:layout_below="@+id/PlayButton"
        android:layout_marginTop="15dp"
        android:background="@android:color/black"
        android:fontFamily="sans-serif"
        android:text="Options"
        android:textSize="24sp"
        android:textStyle="bold"
        android:visibility="visible" />

    <Button
        android:id="@+id/QuitButton"
        android:layout_width="120dp"
        android:layout_height="35dp"
        android:layout_alignStart="@+id/OptionsButton"
        android:layout_below="@+id/OptionsButton"
        android:layout_marginTop="13dp"
        android:background="@android:color/black"
        android:fontFamily="sans-serif"
        android:text="Quit"
        android:textSize="24sp"
        android:textStyle="bold"
        android:visibility="visible" />

</RelativeLayout>
